<UserControl x:Class="iLockbox.LeftPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:c1a="clr-namespace:C1.Silverlight.Imaging;assembly=C1.Silverlight.Imaging"
    Width="400" Height="300">
    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock Text="Left Page" Grid.Column="0" />
        <TextBlock Text="{Binding SeqNo}" Grid.Column="1"/>
        <c1a:C1ImageMagnifier Name="ImageMag" Grid.Column="0" Grid.ColumnSpan="3">
            
        </c1a:C1ImageMagnifier>
    </Grid>
</UserControl>
